<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstQuestion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
<!--        Display amount-->
        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="25dp"
            android:text="You Earned : $ 1000"
            android:textColor="#3F51B5"
            android:textSize="34sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/millionaire" />
        <!--    TextView for Question -->
        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/archivo_black"
            android:padding="30dp"
            android:text="Q3. What is the name of the Android application package file?"
            android:textSize="16sp"
            android:typeface="normal" />

        <!-- RadioGroup for Answers-->
        <RadioGroup
            android:id="@+id/radiogroup1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30dp">

            <RadioButton
                android:id="@+id/radio_windows"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="apk" />

            <RadioButton
                android:id="@+id/radio_linux"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="jar" />

            <RadioButton
                android:id="@+id/radio_ios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="zip" />

            <RadioButton
                android:id="@+id/radio_macos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tar.gz" />

        </RadioGroup>

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Confirm" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>