<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstQuestion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--    TextView for Question -->
        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="25dp"
            android:text="You Earned : $ 25000"
            android:textColor="#3F51B5"
            android:textSize="34sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/millionaire" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/archivo_black"
            android:padding="30dp"
            android:text="Q6. Which permission is required to access the internet in an Android app?"
            android:textSize="16sp"
            android:typeface="normal" />

        <!-- RadioGroup for Answers-->
        <RadioGroup
            android:id="@+id/radiogroup1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30dp">

            <RadioButton
                android:id="@+id/radio_windows"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="android.permission.INTERNET" />

            <RadioButton
                android:id="@+id/radio_linux"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="android.permission.ACCESS_NETWORK_STATE" />

            <RadioButton
                android:id="@+id/radio_ios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="android.permission.ACCESS_WIFI_STATE" />

            <RadioButton
                android:id="@+id/radio_macos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="android.permission.READ_PHONE_STATE" />

        </RadioGroup>

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Confirm" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>